<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.IndovinaNumero.FXMLController">
   <top>
      <Label text="Indovina il Numero!" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Button fx:id="btnNuovaPartita" mnemonicParsing="false" onAction="#doNuovaPartita" text="Nuova Partita">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Label text="Tentativi rimasti">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtTentativi" editable="false" prefHeight="26.0" prefWidth="140.0">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="layoutModalita" disable="true" prefHeight="35.0" prefWidth="356.0">
               <children>
                  <Label text="Difficolta">
                     <HBox.margin>
                        <Insets left="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btnFacile" mnemonicParsing="false" onAction="#impostaFacile" text="Facile">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnMedio" mnemonicParsing="false" onAction="#impostaMedio" text="Medio">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnDifficile" mnemonicParsing="false" onAction="#impostaDifficile" text="Difficile">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox fx:id="layoutAssistita" disable="true" prefHeight="38.0" prefWidth="356.0">
               <children>
                  <Button fx:id="btnAssistita" mnemonicParsing="false" onAction="#handleAssistita" text="Modalita assistita">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <TextField fx:id="txtAssistita" editable="false" prefHeight="26.0" prefWidth="222.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox fx:id="layoutTentativo" disable="true">
               <children>
                  <TextField fx:id="txtTentativoUtente">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btnProva" mnemonicParsing="false" onAction="#doTentativo" text="Prova" />
                  <Button fx:id="btnAbbandona" mnemonicParsing="false" onAction="#handleAbbandona" text="Abbandona">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="356.0">
               <children>
                  <Label text="Tentativi effettuati">
                     <HBox.margin>
                        <Insets left="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <ProgressBar fx:id="barTentativi" prefWidth="200.0" progress="0.0">
                     <HBox.margin>
                        <Insets left="20.0" top="5.0" />
                     </HBox.margin>
                  </ProgressBar>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <TextArea fx:id="txtRisultato" editable="false" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
